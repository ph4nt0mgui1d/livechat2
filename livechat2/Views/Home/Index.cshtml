@using Microsoft.AspNetCore.Identity;
@model livechat2.Models.Chat
@{
    ViewData["Title"] = "Home Page";
}
@inject Microsoft.AspNetCore.Identity.UserManager<IdentityUser> _userManager
@{
    string userId = _userManager.GetUserId(User);
}

    <div class="row no-gutters">
        <div class="col-md-4 border-right">
            <div class="settings-tray">
                <img class="profile-image" src="https://www.clarity-enhanced.net/wp-content/uploads/2020/06/filip.jpg" alt="Profile img">
                <span class="settings-tray--right">
                <form id="logo@userId
                    <button id="logout" type="submit" class="nav-link btn btn-link text-dark">Logout</button>
                </form>
                <input type="hidden" id="currentuser" value="@userId" />
                </span>
            </div>
            <div class="search-box">
                <div class="input-wrapper">
                    <input placeholder="Search here" type="text">
                </div>
            </div>
            <div id="usercnt" style="height:430px; overflow-y:scroll">
       
